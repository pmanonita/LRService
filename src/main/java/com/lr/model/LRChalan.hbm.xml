<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
  <class name="com.lr.model.LRChalan" table="lrchalan">
    <id name="id" type="long" column="id" >
      <generator class="increment"/>
    </id>
  
    <property name="lrIds" type="string" not-null="true">
      <column name="lrIds" />
    </property> 
    <property name="chalanDetails" type="string">
      <column name="chalanDetails" />
    </property>
    <property name="totalCost" type="long">
      <column name="totalCost" />
    </property>
    <property name="createDate" type="date" not-null="true">
      <column name="createDate" />
    </property>
   
    
 </class>
 
 
 
</hibernate-mapping>